<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#4E555E"
    android:onClick="quitButtonClicked">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/card"
        android:layout_above="@+id/answer1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="questionhere"
        android:id="@+id/questionText"
        android:layout_marginTop="68dp"
        android:textSize="35sp"
        android:clickable="true"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignLeft="@+id/answer1"
        android:layout_alignStart="@+id/answer1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/questionText"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="ichi"
        android:id="@+id/answer1"
        android:onClick="onClick1"
        android:background="#F55D60"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2"
        android:textColor="#fff"
        android:layout_margin="3dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="ni"
        android:id="@+id/answer2"
        android:onClick="onClick2"
        android:background="#F55D60"
        android:layout_above="@+id/answer4"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:textColor="#fff"
        android:layout_margin="3dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="san"
        android:id="@+id/answer3"
        android:layout_below="@+id/answer1"
        android:layout_alignLeft="@+id/answer1"
        android:layout_alignStart="@+id/answer1"
        android:onClick="onClick3"
        android:layout_alignRight="@+id/answer1"
        android:layout_alignEnd="@+id/answer1"
        android:background="#F55D60"
        android:textColor="#fff" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="yong"
        android:id="@+id/answer4"
        android:layout_alignBottom="@+id/answer3"
        android:layout_alignLeft="@+id/answer2"
        android:layout_alignStart="@+id/answer2"
        android:onClick="onClick4"
        android:background="#F55D60"
        android:textColor="#fff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feedbackImg"
        android:layout_below="@+id/answer3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:clickable="true"
        android:contextClickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/highScoreDisp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="3"
        android:textColor="#FF0000"
        android:textSize="50dp"
        android:id="@+id/livesCounter"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:id="@+id/quitButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="quitButtonClicked" />


</RelativeLayout>
