<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#4E555E">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/myInput"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/addButton"
        android:onClick="addButtonClicked"
        android:layout_above="@+id/myInput"
        android:layout_alignLeft="@+id/myInput"
        android:layout_alignStart="@+id/myInput" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:id="@+id/deleteButton"
        android:layout_alignBottom="@+id/addButton"
        android:layout_alignRight="@+id/myInput"
        android:layout_alignEnd="@+id/myInput"
        android:onClick="deleteButtonClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RANDOM"
        android:id="@+id/randomButton"
        android:onClick="randomButtonClicked"
        android:layout_above="@+id/myInput"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="questionhere"
        android:id="@+id/questionText"
        android:layout_marginTop="95dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/questionText"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ichi"
        android:id="@+id/answer1"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/addButton"
        android:layout_alignStart="@+id/addButton"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ni"
        android:id="@+id/answer2"
        android:layout_alignTop="@+id/answer1"
        android:layout_alignRight="@+id/deleteButton"
        android:layout_alignEnd="@+id/deleteButton"
        android:onClick="onClick2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="san"
        android:id="@+id/answer3"
        android:layout_below="@+id/answer1"
        android:layout_alignLeft="@+id/answer1"
        android:layout_alignStart="@+id/answer1"
        android:onClick="onClick3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yong"
        android:id="@+id/answer4"
        android:layout_alignBottom="@+id/answer3"
        android:layout_alignLeft="@+id/answer2"
        android:layout_alignStart="@+id/answer2"
        android:onClick="onClick4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="feedbackhere"
        android:id="@+id/feedbackText"
        android:layout_below="@+id/answer3"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
