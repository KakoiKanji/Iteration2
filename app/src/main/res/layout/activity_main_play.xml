<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#4E555E"
    android:clickable="true"
    android:id="@+id/rellay">

    <ViewFlipper
        android:id="@+id/myViewFlipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="39dp"
        android:layout_alignBottom="@+id/questionImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </ViewFlipper>

    <ImageView
        android:layout_width="500dp"
        android:layout_height="700dp"
        android:id="@+id/card"
        android:src="@drawable/card"
        android:clickable="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/frameLayout2"
        android:layout_below="@+id/quitButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="QUESTION"
        android:id="@+id/questionText"
        android:gravity="center"
        android:textSize="30sp"
        android:clickable="true"
        android:textColor="#000"
        android:layout_below="@+id/questionImage"
        android:layout_alignLeft="@+id/questionImage"
        android:layout_alignStart="@+id/questionImage"
        android:textAlignment="inherit"
        android:textAllCaps="true"
        tools:ignore="HardcodedText" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayout1"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/questionImage"
        android:layout_alignLeft="@+id/life2"
        android:layout_alignStart="@+id/life2">

        <TextView
            android:id="@+id/kanjiChoice1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="00"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="50dip"
            android:textColor="#FFFFFF"
            android:elevation="100dp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/answer1"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:text="ICHI"
            android:paddingTop="60dp"
            android:background="@drawable/answerbutton"
            android:onClick="onClick1"
            android:layout_gravity="right|top"
            tools:ignore="HardcodedText"></Button>

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayout2"
        android:layout_alignTop="@+id/frameLayout1"
        android:layout_toLeftOf="@+id/quitButton"
        android:layout_toStartOf="@+id/quitButton">

        <TextView
            android:id="@+id/kanjiChoice2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="00"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="50dip"
            android:textColor="#FFFFFF"
            android:elevation="100dp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/answer2"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:text="NI"
            android:paddingTop="60dp"
            android:background="@drawable/answerbutton"
            android:onClick="onClick2"
            android:layout_gravity="center_horizontal|top"
            tools:ignore="HardcodedText" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayout3"
        android:layout_below="@+id/frameLayout1"
        android:layout_toRightOf="@+id/life1"
        android:layout_toEndOf="@+id/life1"
        android:layout_marginTop="39dp">

        <Button
            android:id="@+id/answer3"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:text="SAN"
            android:paddingTop="60dp"
            android:onClick="onClick3"
            android:background="@drawable/answerbutton"
            tools:ignore="HardcodedText"></Button>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="00"

            android:textSize="50dip"
            android:textColor="#FFFFFF"
            android:elevation="100dp"
            android:id="@+id/kanjiChoice3"
            android:gravity="center"
            tools:ignore="HardcodedText" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayout4"
        android:layout_alignTop="@+id/frameLayout3"
        android:layout_alignLeft="@+id/frameLayout2"
        android:layout_alignStart="@+id/frameLayout2">

        <TextView
            android:id="@+id/kanjiChoice4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="00"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="50dip"
            android:textColor="#FFFFFF"
            android:elevation="100dp"/>

        <Button
            android:id="@+id/answer4"
            android:layout_width="100dp"
            android:layout_height="100dip"
            android:text="YONG"
            android:paddingTop="60dp"
            android:onClick="onClick4"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/answerbutton"
            tools:ignore="HardcodedText"></Button>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/highScoreDisp"
        android:textColor="#fff"
        android:layout_alignRight="@+id/questionImage"
        android:layout_alignEnd="@+id/questionImage"
        android:textSize="35dp"
        tools:ignore="HardcodedText" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:id="@+id/quitButton"
        android:onClick="quitButtonClicked"
        android:background="#F55D60"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/card"
        android:layout_alignEnd="@+id/card"
        tools:ignore="HardcodedText" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/life3"
        android:src="@drawable/heart"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/life2"
        android:layout_toEndOf="@+id/life2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/life2"
        android:src="@drawable/heart"
        android:layout_above="@+id/card"
        android:layout_toRightOf="@+id/life1"
        android:layout_toEndOf="@+id/life1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/life1"
        android:src="@drawable/heart"
        android:layout_alignTop="@+id/life2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:id="@+id/questionImage"
        android:layout_below="@+id/life3"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:id="@+id/feedbackImg"
        android:gravity ="center"
        android:clickable="true"
        android:contextClickable="false"
        android:layout_alignBottom="@+id/myViewFlipper"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
